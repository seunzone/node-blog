<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%=blog.title%> </div>
        <div class= "ui top attached">
            <div class="item">
                    <img class="ui centered rounded image" src="<%=blog.image%>"><br>
                    <div class="content">
                            <span><%=blog.created.toDateString()%></span>
                    </div>
                    <div class="description">
                            <p><%-blog.body%></p>
                    </div>
                    <a class="ui green inverted button" href="/blog/<%= blog._id %>/edit">Edit</a>
                    <form action="/blog/<%= blog._id %>?_method=DELETE" method="POST" id="del">
                        <button class="ui red inverted button">Delete</button>
                    </form>
            </div>
        </div>  
</div>

<% include ./partials/footer %>